<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.don.myapplication.AboutActivity"
    tools:showIn="@layout/activity_about">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekbarview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terug"
        android:id="@+id/terug"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp"
        android:onClick="terug"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/seekbarview"
        android:layout_alignStart="@+id/seekbarview"
        android:id="@+id/groep"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alexander"
            android:id="@+id/radioButton"
            android:layout_alignLeft="@+id/seekbarview"
            android:layout_alignStart="@+id/seekbarview"
            android:layout_alignBottom="@+id/seekbarview"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="van Dam"
            android:id="@+id/radioButton2"
            android:layout_alignLeft="@+id/seekbarview"
            android:layout_alignStart="@+id/seekbarview"
            android:layout_alignBottom="@+id/seekbarview"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1995"
            android:id="@+id/radioButton3"
            android:layout_alignLeft="@+id/seekbarview"
            android:layout_alignStart="@+id/seekbarview"
            android:layout_alignBottom="@+id/seekbarview"
            android:checked="false" />
    </RadioGroup>

</RelativeLayout>
